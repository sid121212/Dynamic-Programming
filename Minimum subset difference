#include <bits/stdc++.h>
using namespace std;
#define Fastio ios_base::sync_with_stdio(false);cin.tie(NULL);
#define mod 1000000007
#define lli long long int
#define pb push_back


int sum(vector<int> arr){
    int summ=0;
    for (int i:arr){
        summ+=i;
    }
    return summ;
}


bool subset_sum(vector<int> arr,int val, int n){
    int dp[n+1][val+1];
    for (int i=0;i<n+1;i++){;
        dp[i][0]=true;
    }
    for (int i=0;i<val+1;i++){
        dp[0][i]=false;
    }
    for (int i=1;i<n+1;i++){
        for (int j=1;j<val+1;j++){
            if (arr[i-1]<=j){
                dp[i][j]=dp[i-1][j-arr[i-1]] or dp[i-1][j];
            }else{
                dp[i][j]=dp[i-1][j];
            }
        }
    }
    return dp[n][val];
}

int main(){
    Fastio
    int n,x;
    cin>>n;
    vector<int> arr;
    for (int i=0;i<n;i++) cin>>x,arr.pb(x);
    int minn=INT_MAX;
    int summ=sum(arr);
    for (int i=0;i<sum(arr)+1;i++){

        if (subset_sum(arr,i,n)){
            int diff=abs(i-(summ-i));
            minn=min(minn,diff);
        }
    }
    cout<<minn<<'\n';

}
