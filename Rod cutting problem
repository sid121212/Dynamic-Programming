#include <bits/stdc++.h>
using namespace std;
#define Fastio ios_base::sync_with_stdio(false);cin.tie(NULL);
#define mod 1000000007
#define lli long long int
#define pb push_back

int sum(vector<int> arr){
    int summ=0;
    for (int i:arr){
        summ+=i;
    }
    return summ;
}


int rod_cutting(int l[],int p[],int n,int w){
   int dp[n+1][w+1];
   for (int i=0;i<=n;i++){
       dp[i][0]=0;
       dp[0][i]=0;
   }
   for (int i=1;i<n+1;i++){
       for (int j=1;j<w+1;j++){
           if (l[i-1]<=j){
               dp[i][j]=max(dp[i-1][j],p[i-1]+dp[i][j-l[i-1]]);
           }else{
               dp[i][j]=dp[i-1][j];
           }
       }
   }
   return dp[n][w];
}




int main(){
    Fastio
    int n;
    cin>>n;
    int length[n+1],price[n+1];
    for (int i=0;i<n;i++){
        int x,y;
        cin>>x>>y;
        length[i]=x;
        price[i]=y;
    }
    cout<<rod_cutting(length,price,n,n);
}
